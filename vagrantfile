Vagrant.configure("2") do |config|
  # Specify the box (Ubuntu 20.04 from Jeff Geerling as requested)
  config.vm.box = "geerlingguy/ubuntu2004"
  
  # Verify the box is available or download it
  config.vm.box_check_update = true

  # Network configuration
 config.vm.network "forwarded_port", guest: 3000, host: 3000
 config.vm.network "forwarded_port", guest: 5000, host: 5000
 config.vm.network "forwarded_port", guest: 27017, host: 27017
  
  # VirtualBox provider configuration
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "2048"
    vb.cpus = 2
    vb.name = "ecommerce-app"  # Optional: Sets a name for the VM
  end

  # Ansible provisioning
  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "playbook.yml"
    ansible.inventory_path = "localhost"  # This tells Vagrant to use a local setup
  end

 # Ensures compatibility with modern Ansible
  end

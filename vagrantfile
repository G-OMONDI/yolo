# Vagrantfile

Vagrant.configure("2") do |config|
  # Base Ubuntu 20.04 box from Jeff Geerling
  config.vm.box = "geerlingguy/ubuntu2004"

  # Set a hostname
  config.vm.hostname = "ansible-ecommerce"

  # Private network (accessible in browser from host)
  config.vm.network "private_network", ip: "192.168.56.10"

  # VM Resources
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "2048"
    vb.cpus = 2
  end

  # Sync the local folder to /vagrant inside the VM
  config.vm.synced_folder ".", "/vagrant"

  # Optional: Auto install Ansible inside VM (for local runs)
  config.vm.provision "shell", inline: <<-SHELL
    sudo apt update
    sudo apt install -y ansible
  SHELL
end
